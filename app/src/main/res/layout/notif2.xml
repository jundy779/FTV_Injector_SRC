<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView

		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView
					android:textAppearance="?android:textAppearanceMedium"
					android:id="@+id/notiftext1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="25.0dip"
			    	android:layout_marginTop="30.0dip"
                    android:fontFamily="sans-serif-smallcaps"
					android:text="Notification"
                    android:textSize="17.0dip"/>
                    
                    <View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="?android:dividerVertical"/>


				<TextView
					android:textColorLink="@color/colorPrimary"
					android:autoLink="web" android:textSize="10.0dip"
					android:id="@+id/confimsg" android:layout_marginLeft="25.0dip"
					android:layout_marginTop="15.0dip"
					android:layout_marginRight="25.0dip"
					android:layout_marginBottom="10.0dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>

				<RelativeLayout
					android:gravity="center_vertical"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10.0dip"
					android:layout_marginBottom="10.0dip">

					<LinearLayout
						android:gravity="center"
						android:padding="10.0dip"
						android:layout_width="100.0dip"
						android:layout_height="wrap_content"
						android:layout_margin="10.0dip"
						android:layout_marginLeft="10.0dip">

						<TextView
							android:textColor="@color/colorPrimary"
							android:layout_gravity="center"
							android:id="@+id/appButton2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:letterSpacing="0.1"/>

					</LinearLayout>

					<androidx.cardview.widget.CardView
						android:padding="0.0dip"
						android:layout_width="150.0dip"
						android:layout_height="40.0dip"
						android:layout_margin="10.0dip"
						android:layout_alignParentRight="true"
						app:cardBackgroundColor="@color/colorPrimary"
						app:cardCornerRadius="20.0dip"
						app:cardElevation="3.0dip">

					
                            <TextView
							android:textColor="@color/white"
							android:layout_gravity="center"
							android:id="@+id/appButton1"
                            android:layout_alignParentRight="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:letterSpacing="0.1"/>

					</androidx.cardview.widget.CardView>

				</RelativeLayout>


			</LinearLayout>

	</ScrollView>
</LinearLayout>


